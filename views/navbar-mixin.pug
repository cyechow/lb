mixin navbar(name, id, style, href)
  - var style = (typeof style === 'undefined') ? "default" : style
  - var href = (typeof style === 'undefined') ? "#" : href
  nav( role="navigation", class=["navbar", "navbar-expand-md", "navbar-light", "bg-light"] )
    block

mixin nav_brand(name, id, href)
  a(href=href, class=["navbar-brand", "d-flex", "w-50", "mr-auto"])= name
  button.navbar-toggler(type="button", data-toggle="collapse", data-target="#" + id)
    span.navbar-toggler-icon

mixin navbar_section(id)
  .navbar-collapse.collapse.w-100( id=id )
    block

mixin navbar_list_left
  ul.navbar-nav.w-100.justify-content-start
    block

mixin navbar_list_right
  ul.navbar-nav.w-100.justify-content-end
    block

mixin nav_item(href, active)
  li(class=["nav-item", active]): a(class="nav-link", href=href)
    block

mixin nav_item_dropdown(href, active)
  li(class=["nav-item", "dropdown", active])
    a.nav-link.dropdown-toggle( href=href, data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false" )= attributes.label
      span.caret
    .dropdown-menu
      block

mixin nav_item_dropdown_item(href)
  a.dropdown-item(href=href)= attributes.label

mixin nav_dropdown_divider
  .dropdown-divider

mixin nav_dropdown_header
  h6.dropdown-header
    block

